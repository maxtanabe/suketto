<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2><%= @user.nickname %>さんの<p>登録情報を編集</p></h2>
      <%= link_to "Back", :back %>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname, "ニックネーム"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :birth_date, "誕生日"%>
          </div>
          <%= raw sprintf(
            f.date_select(:birth_date,
              use_month_numbers: true,
              start_year: 1930,
              end_year: (Time.now.year - 18),
              default: Date.new(1960, 1, 1),
              date_separator: '%s'),
              '年 ', '月 ') + '日' %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, "携帯メールアドレス"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>        
        <div class='field'>
          <div class='field-label'>
            <%= f.label :area_id, "市町村" %>
          </div>
          <div class='field-input'>
            <%= f.collection_select :area_id, Area.all, :id, :name, {} %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :address, "市町村以降の住所"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :address, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :phone_number, "携帯番号"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :phone_number, autofocus: true%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>

     <body>
    <header>
      <div class="heading">
              <div class="heading">
            <%= link_to root_path, class: 'submit' do %>
            <%= image_tag 'すけっと.png' , size: '300x50' ,class: "purchase-btn-icon" %>
            <% end %>
      </div>
      </div>
      <div class="navbar">
        <ul class="nav-lists">
           <% if user_signed_in? %>
            <li>&#x1f3e0;おかえりなさい<%= current_user.nickname %>さん</li>
            <li>&#x1f933;<%= link_to user_path(current_user.id), method: :get do %><%= current_user.nickname %>さんのページ<% end %></li>
            <li>&#x1f622;<%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
            <% else %>
            <li>&#x1f60a;<%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
            <li>&#x1f60a;<%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
            <li>&#x1f60a;ふるさとの納税サービス</li>
            <% end %>
        </ul>
      </div>
    </header>

<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname %>さんのページ
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">誕生日</th>
            <td class="table__col2"><%= @user.birth_date %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @user.nickname %>さんの依頼
      </h2>
      <div class="user__card">
      <% if @posts.present? %>
      
      <% @posts.each do |post| %>
      <li class='list'>
        <div class='item-img-content'>
        <video src=<%= rails_blob_path(post.video) %> type="video/mp4", controls></video>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
          <%= post.user.nickname %>さんの依頼<h2><%= post.title %>&#x1f91d;
          <span>お小遣い<%= post.price %>円<br></span>
          </h3></h2>

          <% if user_signed_in? && current_user.id == post.user_id %>
            <%= link_to edit_post_path(post.id), class: 'submit' do %>
            編集
            <% end %>
            <%= link_to post_path(post.id), method: :delete, class: 'submit' do %>
            削除
            <% end %>
          <% end %>
        </div>
        
      </li>
      <% end %>
      
      <% end %>
      </div>
    </div>
  </div>
</div>

    <footer>
      <p>すけっと ~福井県版~ </p>
    </footer>
     <body>
<%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
  <div class='account-page'>
    <div class='account-page__inner clearfix'>
      <div class='account-page__inner--left account-page__header'>
        <h2>クレジット情報登録</h2>
              <div class="guide-botann">
      <%=link_to 'もどる', :back, class:"back-botann" %>
    </div>
      </div>
        <div class='account-page__inner--right user-form'>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :number, "【カード番号】" %>
            </div>
              <div class='field-input'>
                <%= f.text_field :number, class:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
              </div>
                <div class='field'>
                  <div class='field-label'>
                    <%= f.label :cvc ,"【ＣＶＣ】" %>
                  </div>
                    <div class='field-input'>
                      <%= f.text_field :cvc, class:"cvc", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
                    </div>
                </div>
                  <p>【有効期限】</p>
                <div class='input-expiration-date-wrap'>
                  <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp_month" %>月/
                  <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "exp_year" %>年
                </div>
                <div class='actions'>
                  <%= f.submit "登録する" , class:"button" %>
                </div>
         </div>
      </div>
    </div>
  </div>
<% end %>